@using System.Configuration
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Value of AppSetting SecretKey1</h3>
        <p>
            @ConfigurationManager.AppSettings["SecretKey1"]
        </p>
    </div>
    <div class="col-md-12">
        <h3>Value of Connection String SecretKey2</h3>
        <p>
            @ConfigurationManager.ConnectionStrings["SecretKey2"]
        </p>
    </div>
</div>